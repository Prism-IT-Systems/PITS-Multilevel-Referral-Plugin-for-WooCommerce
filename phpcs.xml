<?xml version="1.0"?>
<ruleset name="Multilevel Referral Plugin for WooCommerce">
    <description>PHPCS ruleset for WordPress.org plugin submission</description>

    <!-- WordPress standards -->
    <rule ref="WordPress-Core"/>
    <rule ref="WordPress-Docs"/>
    <rule ref="WordPress-Extra"/>

    <!-- Exclude third-party code -->
    <exclude-pattern>*/js/*.min.js</exclude-pattern>
    <exclude-pattern>*/js/jquery.mask.js</exclude-pattern>
    <exclude-pattern>*/vendor/*</exclude-pattern>
    <exclude-pattern>*/freemius/*</exclude-pattern>
    <exclude-pattern>*/.trunk/*</exclude-pattern>
    <exclude-pattern>*/node_modules/*</exclude-pattern>
    <exclude-pattern>*/assets/*</exclude-pattern>
</ruleset>
